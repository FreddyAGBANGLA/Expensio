<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RevenusActivity">

    <soup.neumorphism.NeumorphCardView
        style="@style/NeumorphismCard"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        app:neumorph_shapeType="flat"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="51dp"/>

    <TextView
        android:id="@+id/depense_title"
        android:fontFamily="@font/pepsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/revenus"
        android:textSize="60sp"
        android:textColor="@color/blue_logo"
        android:textStyle="bold"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <soup.neumorphism.NeumorphCardView
        style="@style/NeumorphismCard"
        app:neumorph_shapeType="basin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etn_montant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:fontFamily="@font/pepsi"
        android:gravity="end"
        android:inputType="number"
        android:text="0"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/depense_title"
        app:layout_constraintVertical_bias="0.028" />


    <Spinner
        android:id="@+id/spinner_compte_depense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinner_categorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_compte_depense"
        tools:ignore="MissingConstraints" />

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/bloc_date"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_categorie"
        app:neumorph_shapeType="pressed"
        tools:ignore="MissingConstraints">
    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Selectionnez la Date..."
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:textColorHint="@color/blue_logo"
        android:textSize="10sp"
        android:fontFamily="@font/nasalization"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toBottomOf="@+id/spinner_categorie"
        tools:ignore="MissingConstraints" />
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bloc_date"
        app:neumorph_shapeType="pressed"
        tools:ignore="MissingConstraints">
        <EditText
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Selectionnez l'Heure..."
            android:paddingTop="30dp"
            android:paddingLeft="10dp"
            android:textColorHint="@color/blue_logo"
            android:textSize="10sp"
            android:fontFamily="@font/nasalization"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toBottomOf="@id/bloc_date"
            tools:ignore="MissingConstraints" />
    </soup.neumorphism.NeumorphCardView>


</androidx.constraintlayout.widget.ConstraintLayout>