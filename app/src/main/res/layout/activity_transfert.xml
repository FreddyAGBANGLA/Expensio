<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".TransfertActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/transfert"
                    android:textStyle="italic"
                    android:fontFamily="@font/fasthand"
                    android:textColor="@color/blue_logo"
                    android:textSize="39sp"
                    android:layout_gravity="center"/>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:neumorph_shapeType="pressed"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/etn_montant"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:fontFamily="@font/pepsi"
                    android:paddingEnd="20dp"
                    android:inputType="number"
                    android:hint="@string/valeur_initiale"
                    android:background="@android:color/transparent"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textAlignment="textEnd"/>
            </soup.neumorphism.NeumorphCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/nasalization"
                android:gravity="center"
                android:text="@string/selection_compte_source"
                android:textAlignment="center"
                android:textColor="@color/first_app_color"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/spinner_compte_source"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/spinner_compte_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                app:layout_constraintHorizontal_bias="0.498"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/nasalization"
                android:gravity="center"
                android:text="@string/selection_compte_destination"
                android:textAlignment="center"
                android:textColor="@color/first_app_color"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/spinner_compte_destination"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/spinner_compte_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                app:layout_constraintHorizontal_bias="0.498"
                tools:ignore="MissingConstraints" />

            <soup.neumorphism.NeumorphCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:neumorph_shapeType="pressed">

                <EditText
                    android:id="@+id/description"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/nasalization"
                    android:textAlignment="center"
                    android:hint="@string/breve_description"
                    android:background="@android:color/transparent"
                    android:textCursorDrawable="@drawable/cursor"
                    android:layout_gravity="center"
                    tools:ignore="RtlCompat">
                </EditText>
            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/bloc_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:neumorph_shapeType="pressed">

                <EditText
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:fontFamily="@font/nasalization"
                    android:hint="Date_overhere"
                    android:textSize="17sp"
                    android:background="@android:color/transparent"
                    android:textCursorDrawable="@drawable/cursor"
                    android:layout_gravity="center">
                </EditText>
            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:neumorph_shapeType="pressed">

                <EditText
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/nasalization"
                    android:textAlignment="textEnd"
                    android:hint="hour_overhere"
                    android:background="@android:color/transparent"
                    android:textCursorDrawable="@drawable/cursor"
                    android:layout_gravity="center"
                    tools:ignore="RtlCompat">
                </EditText>
            </soup.neumorphism.NeumorphCardView>


            <soup.neumorphism.NeumorphButton
                style="@style/Widget.Neumorph.Button"
                android:id="@+id/btn_valider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/blue_logo"
                android:fontFamily="@font/pepsi"
                android:text="@string/valider"/>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>