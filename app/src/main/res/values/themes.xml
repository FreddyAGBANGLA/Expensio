    <!-- Custom style -->
    <style name="FullScreen" parent="Theme.Expensio">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NeumorphismImage">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_4sdp</item>
        <item name="neumorph_backgroundColor">@color/blue_logo</item>
    </style>

    <style name="NeumorphismCard">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSizeTopLeft">16dp</item>
        <item name="neumorph_cornerSizeTopRight">16dp</item>
        <item name="neumorph_cornerSizeBottomLeft">1dp</item>
        <item name="neumorph_cornerSizeBottomRight">16dp</item>
    </style>

    <style name="NeumorphismTextView">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSizeTopLeft">16dp</item>
        <item name="neumorph_cornerSizeTopRight">16dp</item>
        <item name="neumorph_cornerSizeBottomLeft">1dp</item>
        <item name="neumorph_cornerSizeBottomRight">16dp</item>
    </style>
    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <item name="fontPath">font/pepsi.ttf</item>
    </style>
